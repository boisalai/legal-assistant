# ==============================================
# Configuration Legal Assistant
# ==============================================
# Copiez ce fichier vers .env et adaptez les valeurs

# ===== API =====
API_HOST=0.0.0.0
API_PORT=8000
API_RELOAD=true
DEBUG=true

# ===== Securite =====
SECRET_KEY=change-this-in-production-use-a-long-random-string

# ===== SurrealDB =====
SURREAL_URL=ws://localhost:8002/rpc
SURREAL_NAMESPACE=legal
SURREAL_DATABASE=legal_db
SURREAL_USERNAME=root
SURREAL_PASSWORD=root

# ===== LLM Configuration =====
# Format: provider:model
# Providers: ollama, anthropic, mlx, openai

# Ollama (recommande pour dev local)
MODEL_ID=ollama:qwen2.5:7b

# Claude (pour production)
# MODEL_ID=anthropic:claude-sonnet-4-5-20250929
# ANTHROPIC_API_KEY=sk-ant-xxx

# MLX (Apple Silicon)
# MODEL_ID=mlx:mlx-community/Phi-3-mini-4k-instruct-4bit

# ===== Ollama =====
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=qwen2.5:7b

# ===== Anthropic Claude =====
ANTHROPIC_API_KEY=
ANTHROPIC_MODEL=claude-sonnet-4-5-20250929

# ===== MLX =====
MLX_MODEL_PATH=mlx-community/Phi-3-mini-4k-instruct-4bit

# ===== Stockage =====
UPLOAD_DIR=./data/uploads
MAX_UPLOAD_SIZE_MB=50

# ===== Agno =====
AGNO_LOG_LEVEL=INFO
AGNO_STORAGE_PATH=./data/agno_state
